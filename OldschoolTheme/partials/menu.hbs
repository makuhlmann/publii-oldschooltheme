{{#unless level}}
<nav class="menu-bar">
    {{/unless}}

    <ul class="{{#if level}}submenu level-{{level}}{{else}}menu{{/if}}">
        {{#each items}}
        <li class="menu-item {{#if items}}has-submenu{{/if}} {{#if active}}active{{/if}}">
            {{#if link}}
            <a href="{{menuUrl}}"
               {{#if title}} title="{{title}}" {{/if}}
               {{#if target}} target="{{target}}" {{/if}}
               {{#if rel}} rel="{{rel}}" {{/if}}
               {{#if items}} aria-haspopup="true" {{/if}}>{{label}}</a>
            {{else}}
            <span>{{label}}</span>
            {{/if}}

            {{#if items}}
            {{> menu}}
            {{/if}}
        </li>
        {{/each}}
    </ul>

    {{#unless level}}
</nav>
{{/unless}}
